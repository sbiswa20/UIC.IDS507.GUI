        </script>
    <script defer src="~/js/htsclassifier.js"></script>
    </head>
        <body>
            <H1>Product Classifier</H1>
            <div id="masterContainer">
                <div class="search-container">
                    <table width="100%">
                        <tr>
                            <td width="80%">
                                <input class="search-box" id="htsSearch" type="text" placeholder="Enter Search Criteria">
                            </td>
                            <td width="10%" align="right">
                                <button class="search-button" onClick="getHTSTree();">Search</button>
                            </td>
                            <td width="10%" align="right">
                                <button class="search-button" onClick="clearSearch();">Clear</button>
                            </td>
                        </tr>
                    </table>


                </div>
                <div class="results-div" id="results-div"></div>
                <div class="search-container">
                    <table width="100%">
                        <tr>
                            <td width="25%">
                                <input id="htsCode" class="search-box" type="text" placeholder="Classification Code">
                            </td>
                            <td width="25%" align="right">
                                <button class="button-inactive">Publish</button>
                            </td>
                            <td width="25%">
                            </td>
                            <td width="25%">
                            </td>
                        </tr>
                    </table>

                </div>

            </div>
        </body>
</html>